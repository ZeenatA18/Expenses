            <input type="radio" class="radio" name="expenses" value="food"> Food <br>
            <input type="radio" class="radio" name="expenses" value="toiletries"> Toiletries <br>
            <input type="radio" class="radio" name="expenses" value="data"> Data <br>
        </div>
        <br><br>

        <input size="30" type="text" name="cost" class="enterCost" value="" placeholder="Enter cost here">
        <br><br>

        <input type="date" name="date">
        <br><br>

        <button type="submit"> Submit </button>

        <br><br>

    </form>

    <button type="submit"> <a href="/expenses/{{uname}}">View Current Total</a></button>

